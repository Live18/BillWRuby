<h1>Learn More About ARC Sports Tech</h1>
<h2>Fill out the form below and be part of the beta test</h2>
<%= form_tag do %>
	<div class="upperBody leftSpace">
    <div class="row">
      <h1>Contact Us</h1>
      <div class="col-md-4">
        <div class="form-group">
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= label_tag :message %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        </div>
      </div>
    </div>
      <%= submit_tag "Send" %>
    </div>
<% end %>
<p>Find me in app/views/static_pages/contact.html.erb</p>
