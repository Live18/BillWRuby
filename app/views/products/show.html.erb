<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2 col-md-4">
      <div class="product-image">
        <% if @product.image_url %>
              <%= image_tag(@product.image_url, class: "img-responsive") %>
          <% end %>
      </div>
    </div>
    <div class="col-sm-2 col-md-4">
      <p class="product-name">
        <%= @product.name %>
      </p>

      <p class="product-description">
        <%= @product.description %>
      </p>
      <p class="product-price">
        <%= @product.price %>
      </p>
    </div>

    <div class="col-sm-2 col-md-4">
     <%= render 'new_comment', comments: @product.comments %>
    </div>
    <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
    <div class="col-sm-2 col-md-4">
    <h4>Highest Rating Comment</h4>
        <% if @product.highest_rating_comment %>
        <%= @product.highest_rating_comment.body %>
      <% end %>
      <h4>Lowest Rating Comment</h4>
         <% if @product.lowest_rating_comment %>
         <%= @product.lowest_rating_comment.body %>
       <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product), class:'btn btn-primary' %> |
<%= link_to 'Back', products_path, class:'btn btn-primary' %>