<% if signed_in? %>
<h4>Add A Review:</h4>
<%= form_for([@product, @product.comments.build]) do |f| %>
	<div>	
			<div>
				<%= f.label :body, "Comments" %><br>
				<%= f.text_area :body %>
			</div><br>
			<div class="rating"></div><br>
			<div> <%= f.submit "Submit" %></div>
		</div>
	<% end %>
<% end %>
