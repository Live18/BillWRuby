<div class="col-sm-2 col-md-3">
	<%= image_tag(product.image_url, class: "img-responsive") %>
	<h2><%= link_to product.name, product %></h2>
	<p><%= product.description %></p>
	<p><%= product.colour %></p>
	<strong>$<%= number_to_currency(product.price) %>/month</strong>
	<%= link_to "Delete", product_path(product), :method => "DELETE", :confirm => "Are you sure you want to delete?" %>
</div>