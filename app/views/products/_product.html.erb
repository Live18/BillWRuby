<div class="col-sm-12 col-md-6">
    <% if product.image_url %>
        <%= image_tag(product.image_url, class: "img-responsive detail img-zoom") %>
    <% end %>
    <% cache product do %>
    	<tr>
		    <td><h2><%= link_to product.name, product %></h2></td>
		    <td><%= product.description %></td>
		    <td><%= product.colour %></td>
		    <td><strong><%= number_to_currency(product.price) %>/month</strong></td>
		   <!-- <td><%= link_to "Delete", product_path(product), :method => "DELETE", :confirm => "Are you sure you want to delete?" %></td> -->
	    </tr>
    <% end %>

    <div class="list">
    	<% if user_signed_in? && current_user.admin? %>
    		<%= link_to 'New Product', new_product_path(product) %>
	    	<%= link_to 'Show', product %>
		    <%= link_to 'Edit', edit_product_path(product) %>
		    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> 
	    <% end %>

	</div>
</div>